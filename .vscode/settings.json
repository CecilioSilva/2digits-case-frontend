{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.json": "${capture}-lock.json",
    ".env.*": ".env-example, .env.local, .env.development, .env.production,.npmrc,.yarnrc,next-env.d.ts",
    ".env": ".env-example, .env.local, .env.development, .env.production,.npmrc,.yarnrc,next-env.d.ts",
    "next.config.*": "postcss.config.*, tailwind.config.*, tsconfig.json, next-env.d.ts, .eslintrc.json, package.json,prettier.config.*,pnpm-lock.yaml,.prettierignore,.mise.toml",
    "package.json": ".eslintrc.json, tsconfig.json, yarn.lock, package.lock, .eslintignore,.eslintrc.js, .prettierrc.js, nodemon.json",
    "README.md": ".gitignore, LICENCE"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.wordWrapColumn": 100,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "cSpell.language": "en,nl"
}
